{
  "manifest_version": 3,
  "name": "THRESHOLD",
  "description": "THRESHOLD makes the new tab page your canvas, allowing you to make it both personalised and convenient",
  "version": "2.4.4",
  "author": "Luke McCallum",

  "action": {
    "default_icon": {
      "128": "images/apertureWhite128px.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "images/apertureWhite128px.png"
  },

  "chrome_url_overrides": {
    "newtab": "home.html"
  },

  "incognito": "split",
  "permissions": ["storage"]
}